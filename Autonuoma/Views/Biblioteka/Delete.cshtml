@model Org.Ktu.Isk.P175B602.Autonuoma.ViewModels.BibliotekaEditVM
@{
	ViewData["title"] = "Bibliotekos šalinimas";
}

<div class="main-content-header container-fluid d-flex d-row justify-content-between align-items-center">
	<span class="title">@ViewData["title"]</span>
	<span class="actions">
		<a href="@Url.Action("Index")" class="link-primary"><i class="fa-solid fa-angles-left"></i> Atgal į sarašą</a>
	</span>
</div>

<div class="container-fluid d-flex justify-content-center">
@using (Html.BeginForm()) 
{
	@Html.AntiForgeryToken()

	<fieldset class="border rounded shadow p-2">
		<legend class="text-center">Ar tikrai norite šalinti šią biblioteką?</legend>

		<dl>
			<dt>@Html.DisplayNameFor(m => m.Biblioteka.Id)</dt>
			<dd>@Html.DisplayFor(m => m.Biblioteka.Id)</dd>

			<dt>@Html.DisplayNameFor(m => m.Biblioteka.Pavadinimas)</dt>
			<dd>@Html.DisplayFor(m => m.Biblioteka.Pavadinimas)</dd>

			<dt>@Html.DisplayNameFor(m => m.Biblioteka.Adresas)</dt>
			<dd>@Html.DisplayFor(m => m.Biblioteka.Adresas)</dd>

			<dt>@Html.DisplayNameFor(m => m.Biblioteka.Telefonas)</dt>
			<dd>@Html.DisplayFor(m => m.Biblioteka.Telefonas)</dd>

			<dt>@Html.DisplayNameFor(m => m.Biblioteka.El_pastas)</dt>
			<dd>@Html.DisplayFor(m => m.Biblioteka.El_pastas)</dd>

			<dt>@Html.DisplayNameFor(m => m.Biblioteka.Darbo_laikas)</dt>
			<dd>@Html.DisplayFor(m => m.Biblioteka.Darbo_laikas)</dd>

			<dt>@Html.DisplayNameFor(m => m.Biblioteka.FkTipas)</dt>
			<dd>@Html.DisplayFor(m => m.Biblioteka.FkTipas)</dd>

			<dt>@Html.DisplayNameFor(m => m.Biblioteka.FkMiestas)</dt>
			<dd>@Html.DisplayFor(m => m.Biblioteka.FkMiestas)</dd>

		</dl>

		@if( ViewData["deletionNotPermitted"] != null )
		{
			<div class="alert alert-warning text-center">
				<i class="fa-solid fa-circle-exclamation"></i> Šios bibliotekos esybės trinti negalima, nes 
				ji turi ryšių į priklausomas esybes.
			</div>
		}
		else
		{
			<div class="container-fluid d-flex d-row justify-content-end">
				<button
					formaction="@Url.Action("DeleteConfirm", new {id = Model.Biblioteka.Id})"
					class="btn btn-danger"
					style="white-space: nowrap;"
				><i class="fa-solid fa-trash"></i> Šalinti</button>
			</div>			
		}
	</fieldset>
}
</div>

<div class="main-content-footer container-fluid d-flex d-row justify-content-between align-items-center">
	<span class="title"></span>
	<span class="actions">
		<a href="@Url.Action("Index")" class="link-primary"><i class="fa-solid fa-angles-left"></i> Atgal į sarašą</a>
	</span>
</div>
