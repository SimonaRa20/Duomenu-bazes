@model Org.Ktu.Isk.P175B602.Autonuoma.ViewModels.KnygaEditVM
@{
	ViewData["title"] = "Knygos šalinimas";
}

<div class="main-content-header container-fluid d-flex d-row justify-content-between align-items-center">
	<span class="title">@ViewData["title"]</span>
	<span class="actions">
		<a href="@Url.Action("Index")" class="link-primary"><i class="fa-solid fa-angles-left"></i> Atgal į sarašą</a>
	</span>
</div>

<div class="container-fluid d-flex justify-content-center">
@using (Html.BeginForm()) 
{
	@Html.AntiForgeryToken()

	<fieldset class="border rounded shadow p-2">
		<legend class="text-center">Ar tikrai norite šalinti šį knygą?</legend>

		<dl>
			<dt>@Html.DisplayNameFor(m => m.Knyga.ISBN)</dt>
			<dd>@Html.DisplayFor(m => m.Knyga.ISBN)</dd>

			<dt>@Html.DisplayNameFor(m => m.Knyga.Pavadinimas)</dt>
			<dd>@Html.DisplayFor(m => m.Knyga.Pavadinimas)</dd>

			<dt>@Html.DisplayNameFor(m => m.Knyga.Puslapiu_skaicius)</dt>
			<dd>@Html.DisplayFor(m => m.Knyga.Puslapiu_skaicius)</dd>

			<dt>@Html.DisplayNameFor(m => m.Knyga.LeidimoMetai)</dt>
			<dd>@Html.DisplayFor(m => m.Knyga.LeidimoMetai)</dd>

			<dt>@Html.DisplayNameFor(m => m.Knyga.Kalba)</dt>
			<dd>@Html.DisplayFor(m => m.Knyga.Kalba)</dd>

			<dt>@Html.DisplayNameFor(m => m.Knyga.Kiekis)</dt>
			<dd>@Html.DisplayFor(m => m.Knyga.Kiekis)</dd>

			<dt>@Html.DisplayNameFor(m => m.Knyga.Busena)</dt>
			<dd>@Html.DisplayFor(m => m.Knyga.Busena)</dd>

			<dt>@Html.DisplayNameFor(m => m.Knyga.FkZanras)</dt>
			<dd>@Html.DisplayFor(m => m.Knyga.FkZanras)</dd>

			<dt>@Html.DisplayNameFor(m => m.Knyga.FkAutorius)</dt>
			<dd>@Html.DisplayFor(m => m.Knyga.FkAutorius)</dd>

			<dt>@Html.DisplayNameFor(m => m.Knyga.FkLeidykla)</dt>
			<dd>@Html.DisplayFor(m => m.Knyga.FkLeidykla)</dd>

		</dl>

		@if( ViewData["deletionNotPermitted"] != null )
		{
			<div class="alert alert-warning text-center">
				<i class="fa-solid fa-circle-exclamation"></i> Šios automobilio esybės trinti negalima, nes 
				ji turi ryšių į priklausomas esybes.
			</div>
		}
		else
		{
			<div class="container-fluid d-flex d-row justify-content-end">
				<button
					formaction="@Url.Action("DeleteConfirm", new {id = Model.Knyga.ISBN})"
					class="btn btn-danger"
					style="white-space: nowrap;"
				><i class="fa-solid fa-trash"></i> Šalinti</button>
			</div>			
		}
	</fieldset>
}
</div>

<div class="main-content-footer container-fluid d-flex d-row justify-content-between align-items-center">
	<span class="title"></span>
	<span class="actions">
		<a href="@Url.Action("Index")" class="link-primary"><i class="fa-solid fa-angles-left"></i> Atgal į sarašą</a>
	</span>
</div>
