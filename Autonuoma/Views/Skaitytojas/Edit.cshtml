@model Org.Ktu.Isk.P175B602.Autonuoma.ViewModels.SkaitytojasEditVM
@{
	ViewData["title"] = "Skaitytojo redagavimas";
}

<div class="main-content-header container-fluid d-flex d-row justify-content-between align-items-center">
	<span class="title">@ViewData["title"]</span>
	<span class="actions">
		<a href="@Url.Action("Index")" class="link-primary"><i class="fa-solid fa-angles-left"></i> Atgal į sarašą</a>
	</span>
</div>

<div class="container-fluid d-flex justify-content-center">
@using (Html.BeginForm())
{
	@Html.AntiForgeryToken()
	
	@Html.ValidationSummary(true, "", new { @class = "text-danger" })
	
	@* add hidden form fields for non-visible properties, otherwise they will get lost in code that handles button presses *@
	@Html.HiddenFor(m => m.Skaitytojas.Id)

	<fieldset class="border rounded shadow p-2">
		<div class="form-group">
			@Html.LabelFor(m => m.Skaitytojas.Id, new { @class = "control-label" })
			@Html.EditorFor(m => m.Skaitytojas.Id, new { htmlAttributes = new { @class = "form-control" } })
			@Html.ValidationMessageFor(m => m.Skaitytojas.Id, "", new { @class = "text-danger" })
		</div>

		<div class="form-group">
			@Html.LabelFor(m => m.Skaitytojas.Vardas, new { @class = "control-label" })
			@Html.EditorFor(m => m.Skaitytojas.Vardas, new { htmlAttributes = new { @class = "form-control" } })
			@Html.ValidationMessageFor(m => m.Skaitytojas.Vardas, "", new { @class = "text-danger" })
		</div>

			<div class="form-group">
			@Html.LabelFor(m => m.Skaitytojas.Pavarde, new { @class = "control-label" })
			@Html.EditorFor(m => m.Skaitytojas.Pavarde, new { htmlAttributes = new { @class = "form-control" } })
			@Html.ValidationMessageFor(m => m.Skaitytojas.Pavarde, "", new { @class = "text-danger" })
		</div>

		<div class="form-group">
			@Html.LabelFor(m => m.Skaitytojas.Gimimo_data, new { @class = "control-label" })
			@Html.TextBoxFor(m => m.Skaitytojas.Gimimo_data, "{0:yyyy-MM-dd}", new { @class = "form-control date-picker"})
			@Html.ValidationMessageFor(m => m.Skaitytojas.Gimimo_data, "", new { @class = "text-danger" })
		</div>

		<div class="form-group">
			@Html.LabelFor(m => m.Skaitytojas.Telefonas, new { @class = "control-label" })
			@Html.EditorFor(m => m.Skaitytojas.Telefonas, new { htmlAttributes = new { @class = "form-control" } })
			@Html.ValidationMessageFor(m => m.Skaitytojas.Telefonas, "", new { @class = "text-danger" })
		</div>

		<div class="form-group">
			@Html.LabelFor(m => m.Skaitytojas.El_pastas, new { @class = "control-label" })
			@Html.EditorFor(m => m.Skaitytojas.El_pastas, new { htmlAttributes = new { @class = "form-control" } })
			@Html.ValidationMessageFor(m => m.Skaitytojas.El_pastas, "", new { @class = "text-danger" })
		</div>

		<div class="form-group">
			@Html.LabelFor(m => m.Skaitytojas.Adresas, new { @class = "control-label" })
			@Html.EditorFor(m => m.Skaitytojas.Adresas, new { htmlAttributes = new { @class = "form-control" } })
			@Html.ValidationMessageFor(m => m.Skaitytojas.Adresas, "", new { @class = "text-danger" })
		</div>

		<div class="form-group">
			@Html.LabelFor(m => m.Skaitytojas.FkKategorija, new { @class = "control-label" })
			@Html.DropDownListFor(m => m.Skaitytojas.FkKategorija, Model.Lists.Kategorijos, "--------------", new { @class = "form-control" })
			@Html.ValidationMessageFor(m => m.Skaitytojas.FkKategorija, "", new { @class = "text-danger" })
		</div>

	</fieldset>

	<div class="container-fluid d-flex d-row justify-content-end">
		<button name="save" value="1" class="btn btn-success"><i class="fa-solid fa-floppy-disk"></i> Išsaugoti</button>
	</div>
}
</div>

<div class="main-content-footer container-fluid d-flex d-row justify-content-between align-items-center">
	<span class="title"></span>
	<span class="actions">
		<a href="@Url.Action("Index")" class="link-primary"><i class="fa-solid fa-angles-left"></i> Atgal į sarašą</a>
	</span>
</div>