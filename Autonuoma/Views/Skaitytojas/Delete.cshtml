@model Org.Ktu.Isk.P175B602.Autonuoma.ViewModels.SkaitytojasEditVM
@{
	ViewData["title"] = "Skaitytojo šalinimas";
}

<div class="main-content-header container-fluid d-flex d-row justify-content-between align-items-center">
	<span class="title">@ViewData["title"]</span>
	<span class="actions">
		<a href="@Url.Action("Index")" class="link-primary"><i class="fa-solid fa-angles-left"></i> Atgal į sarašą</a>
	</span>
</div>

<div class="container-fluid d-flex justify-content-center">
@using (Html.BeginForm()) 
{
	@Html.AntiForgeryToken()

	<fieldset class="border rounded shadow p-2">
		<legend class="text-center">Ar tikrai norite šalinti šį skaitytoją?</legend>

		<dl>
			<dt>@Html.DisplayNameFor(m => m.Skaitytojas.Id)</dt>
			<dd>@Html.DisplayFor(m => m.Skaitytojas.Id)</dd>

			<dt>@Html.DisplayNameFor(m => m.Skaitytojas.Vardas)</dt>
			<dd>@Html.DisplayFor(m => m.Skaitytojas.Vardas)</dd>

			<dt>@Html.DisplayNameFor(m => m.Skaitytojas.Pavarde)</dt>
			<dd>@Html.DisplayFor(m => m.Skaitytojas.Pavarde)</dd>

			<dt>@Html.DisplayNameFor(m => m.Skaitytojas.Gimimo_data)</dt>
			<dd>@Html.DisplayFor(m => m.Skaitytojas.Gimimo_data)</dd>

			<dt>@Html.DisplayNameFor(m => m.Skaitytojas.Telefonas)</dt>
			<dd>@Html.DisplayFor(m => m.Skaitytojas.Telefonas)</dd>

			<dt>@Html.DisplayNameFor(m => m.Skaitytojas.El_pastas)</dt>
			<dd>@Html.DisplayFor(m => m.Skaitytojas.El_pastas)</dd>

			<dt>@Html.DisplayNameFor(m => m.Skaitytojas.Adresas)</dt>
			<dd>@Html.DisplayFor(m => m.Skaitytojas.Adresas)</dd>

			<dt>@Html.DisplayNameFor(m => m.Skaitytojas.FkKategorija)</dt>
			<dd>@Html.DisplayFor(m => m.Skaitytojas.FkKategorija)</dd>

		</dl>

		@if( ViewData["deletionNotPermitted"] != null )
		{
			<div class="alert alert-warning text-center">
				<i class="fa-solid fa-circle-exclamation"></i> Šios skaitytojo esybės trinti negalima, nes 
				ji turi ryšių į priklausomas esybes.
			</div>
		}
		else
		{
			<div class="container-fluid d-flex d-row justify-content-end">
				<button
					formaction="@Url.Action("DeleteConfirm", new {id = Model.Skaitytojas.Id})"
					class="btn btn-danger"
					style="white-space: nowrap;"
				><i class="fa-solid fa-trash"></i> Šalinti</button>
			</div>			
		}
	</fieldset>
}
</div>

<div class="main-content-footer container-fluid d-flex d-row justify-content-between align-items-center">
	<span class="title"></span>
	<span class="actions">
		<a href="@Url.Action("Index")" class="link-primary"><i class="fa-solid fa-angles-left"></i> Atgal į sarašą</a>
	</span>
</div>
